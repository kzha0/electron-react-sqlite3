/*
Adopted from electron-forge vite starter template
*/
{
    "compilerOptions": {
        "composite" : true,
        "target": "ESNext",
        "module": "commonjs",
        "allowJs": true,
        "skipLibCheck": true,

        /* Bundler mode */
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["electron/**/*","src","packages/**/*", "*.ts", "*.d.ts", "*.tsx"]
}
